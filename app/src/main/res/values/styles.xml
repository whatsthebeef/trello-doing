<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar"/>

    <style name="doing_button">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/layout_card</item>
        <item name="android:layout_width">60dip</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="menu_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:text">@string/separator</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10dip</item>
    </style>

    <style name="menu_separator" parent="menu_item">
        <item name="android:text">@string/separator</item>
    </style>

    <style name="list_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dip</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="action_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">8dip</item>
    </style>

    <style name="action_icon">
        <item name="android:layout_width">25dip</item>
        <item name="android:layout_height">25dip</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">2dip</item>
    </style>

    <style name="list_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/layout_list</item>
        <item name="android:divider">@null</item>
    </style>

</resources>
