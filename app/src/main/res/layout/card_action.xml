<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/card_actions"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_list_item"
                android:orientation="vertical"
                android:padding="8dip">

    <TextView
        android:id="@+id/card_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/deadline"
        android:layout_below="@id/card_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingTop="10dip"
            android:textSize="12dip"
            android:id="@+id/deadline_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/deadline"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageButton
            android:id="@+id/clock_out"
            style="@style/action_button"
            android:src="@drawable/clock_off"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/clock_on"
            style="@style/action_button"
            android:src="@drawable/clock_on"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/done"
            style="@style/action_button"
            android:src="@drawable/done"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/today"
            style="@style/action_button"
            android:src="@drawable/today"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/set_deadline"
            style="@style/action_button"
            android:src="@drawable/set_deadline"/>

        <ImageButton
            android:id="@+id/cancel"
            style="@style/action_button"
            android:src="@drawable/cancel"/>

    </LinearLayout>

</RelativeLayout>