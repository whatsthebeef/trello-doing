<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:background="@drawable/layout_list_item"
                android:orientation="vertical">

    <TextView
        android:id="@+id/card_name"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_name"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageButton
            android:id="@+id/clock_out"
            android:visibility="invisible"
            style="@style/action_button"
            android:src="@drawable/clock_off"/>

        <ImageButton
            android:visibility="invisible"
            android:id="@+id/clock_on"
            style="@style/action_button"
            android:src="@drawable/clock_on"/>

        <ImageButton
            android:id="@+id/done"
            android:visibility="invisible"
            style="@style/action_button"
            android:src="@drawable/done"/>

        <ImageButton
            android:id="@+id/today"
            android:visibility="invisible"
            style="@style/action_button"
            android:src="@drawable/today"/>

        <ImageButton
            android:id="@+id/set_deadline"
            style="@style/action_button"
            android:src="@drawable/set_deadline"/>

        <ImageButton
            android:id="@+id/cancel"
            style="@style/action_button"
            android:src="@drawable/cancel"/>

    </LinearLayout>

</RelativeLayout>