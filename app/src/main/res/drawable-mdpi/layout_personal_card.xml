<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/grey" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <!-- White Top color -->
    <item
        android:bottom="10dp"
        android:top="10dp"
        android:right="10dp"
        android:left="10dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>
