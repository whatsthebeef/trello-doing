<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zode64.trellodoing">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Broadcast Receiver that will process AppWidget updates -->
        <receiver
            android:name=".DoingWidget"
            android:label="@string/widget_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_doing" />
        </receiver>

        <!-- Service to perform web API queries -->
        <service android:name=".DoingWidget$UpdateService">
            <intent-filter>
                <data android:mimeType="text/plain" android:scheme="intent" />
                <action android:name="com.zode64.trellodoing.intent.action.CLOCK_OFF" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.zode64.trellodoing.intent.action.REFRESH" />
                <action android:name="com.zode64.trellodoing.intent.action.AUTO_UPDATE" />
            </intent-filter>
        </service>

        <receiver android:name=".DoingWidget$NetworkChangeReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>


